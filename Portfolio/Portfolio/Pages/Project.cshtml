@page "{id}"
@using Portfolio.Models
@inject IProjectService ProjectService
@{ 
    Layout = "_Layout";
    var id = int.Parse((string)RouteData.Values["id"]);
    var project = await ProjectService.FindAsync(id);
}

<h2>Project Page</h2>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="col-md-12">
                <span>
                    @project.Description
                </span>
                <hr />
            </div>
        </div>
    </div>
</div>